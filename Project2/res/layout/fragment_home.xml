<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey">

        <FrameLayout
            android:id="@+id/context_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_overlay"
            android:paddingTop="?attr/actionBarSize"
            android:paddingBottom="@dimen/padding_small">

            <RelativeLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium" >

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title2"
                    android:layout_centerHorizontal="true"
                    android:text="@string/app_name"
                    android:textColor="@color/blue"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="welcome to"
                    android:textColor="@color/white"
                    android:textSize="26sp" />

            </RelativeLayout>

        </FrameLayout>

    <EditText
        android:id="@+id/pass_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username_text"
        android:layout_below="@+id/username_text"
        android:hint="Password"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Username"
        android:inputType="textPersonName" 
        android:ems="10" >

    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pass_text"
        android:layout_alignTop="@+id/locallogin_butt"
        android:text="Sign In:" 
        android:textColor="@color/blue"/>

    <Button
        android:id="@+id/locallogin_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass_text"
        android:layout_toRightOf="@+id/textView1"
        android:text="Local"
        android:onClick="loginLocal" />

    <Button
        android:id="@+id/netlogin_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/locallogin_butt"
        android:layout_alignBottom="@+id/locallogin_butt"
        android:layout_toRightOf="@+id/locallogin_butt"
        android:text="Net" 
        android:onClick="loginNet" />

    <Button
        android:id="@+id/signup_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/new_user_text"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/new_user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/netlogin_butt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="New User?" 
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/username_text"
        android:layout_alignLeft="@+id/pass_text"
        android:layout_centerHorizontal="true"
        android:text="Please Sign In:"
        android:textColor="@color/blue" />

    <ProgressBar
        android:id="@+id/reg_loading_home"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />
    
</RelativeLayout>